{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-case-declarations": "warn",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "public/",
    "*.d.ts",
    "extensions/",
    "scripts/"
  ]
}
