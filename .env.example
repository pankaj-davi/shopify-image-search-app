# Database Configuration
# Change DATABASE_PROVIDER to switch between databases: firebase, mongodb, supabase
DATABASE_PROVIDER=firebase

# Firebase Configuration (when using firebase)
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# MongoDB Configuration (when using mongodb)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE_NAME=shopify_app

# Supabase Configuration (when using supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Shopify Configuration (existing)
SHOPIFY_API_KEY=your-api-key
